<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kellton="http://schemas.android.com/apk/res/com.groupon.go"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" >

    <View
        android:id="@+id/view_top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/common_divider_color" />

    <ImageView
        android:id="@+id/img_card_type_default_visa"
        android:layout_width="34dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view_top_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/common_image_content_desc"
        android:src="@drawable/ic_visa_small" />

    <com.kelltontech.ui.widget.CustomTextView
        android:id="@+id/txv_user_card_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_top_divider"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/img_card_type_default_visa"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/common_grey_1"
        android:textSize="@dimen/splash_txv_17"
        kellton:customTypeFace="@string/font_museosans_500" />

    <com.kelltontech.ui.widget.CustomTextView
        android:id="@+id/txv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txv_user_card_num"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/img_card_type_default_visa"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/common_grey_2"
        android:textSize="14sp"
        kellton:customTypeFace="@string/font_museosans_500" />

    <ImageView
        android:id="@+id/img_delete_card"
        android:layout_width="34dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/common_image_content_desc"
        android:src="@drawable/ic_delete" />

</RelativeLayout>