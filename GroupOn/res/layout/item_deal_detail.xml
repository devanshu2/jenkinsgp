<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/deal_details_pager_item_height" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_deal_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/img_bck_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/common_image_content_desc"
            android:src="@drawable/ic_arrow_left_prev_img" />

        <ImageView
            android:id="@+id/img_fwd_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/common_image_content_desc"
            android:src="@drawable/ic_arrow_right_next_img" />
    </RelativeLayout>

    <include layout="@layout/layout_deal_image_bottom_overlay" />

</RelativeLayout>